{
	"name": "ephrem-view",
	"version": "0.5.2",
	"description": "Ephrem-view is a React component library for rendering scripture passages retrieved from API.Bible and Ephrem, providing flexible and responsive designs for seamless scriptural presentation.",
	"repository": {
		"type": "git",
		"url": "https://github.com/stevin-wilson/ephrem-view"
	},
	"license": "MIT",
	"author": {
		"name": "Stevin Wilson",
		"email": "hello@stevinwilson.com"
	},
	"type": "module",
	"main": "dist/index.es.js",
	"types": "dist/index.d.ts",
	"files": [
		"/dist",
		"package.json",
		"LICENSE.md",
		"README.md"
	],
	"scripts": {
		"build": "tsc && vite build",
		"build-storybook": "storybook build",
		"format": "prettier --write --parser typescript '**/*.{ts,tsx}'",
		"lint": "eslint . --max-warnings 0 --fix",
		"lint:knip": "knip",
		"lint:md": "markdownlint \"**/*.md\" \".github/**/*.md\" --rules sentences-per-line",
		"lint:packages": "pnpm dedupe --check",
		"lint:spelling": "cspell \"**\" \".github/**/*\"",
		"prepare": "husky",
		"storybook": "storybook dev -p 6006",
		"test": "vitest",
		"test:run": "vitest run",
		"test:ui": "vitest --ui",
		"tsc": "tsc"
	},
	"lint-staged": {
		"*": "prettier --ignore-unknown --write"
	},
	"dependencies": {
		"@emotion/react": "^11.13.3",
		"@emotion/styled": "^11.13.0",
		"@popperjs/core": "^2.11.8",
		"@radix-ui/colors": "^3.0.0",
		"html-react-parser": "^5.1.18",
		"react-popper": "^2.3.0"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "3.2.0",
		"@release-it/conventional-changelog": "9.0.0",
		"@storybook/addon-essentials": "8.4.0",
		"@storybook/addon-interactions": "8.4.0",
		"@storybook/addon-links": "8.4.0",
		"@storybook/addon-onboarding": "8.4.0",
		"@storybook/blocks": "8.4.0",
		"@storybook/react": "8.4.0",
		"@storybook/react-vite": "8.4.0",
		"@storybook/test": "8.4.0",
		"@testing-library/jest-dom": "6.6.2",
		"@testing-library/react": "16.1.0",
		"@types/node": "22.10.0",
		"@types/react": "19.0.0",
		"@typescript-eslint/eslint-plugin": "8.18.0",
		"@typescript-eslint/parser": "8.18.0",
		"@vitest/coverage-v8": "2.1.3",
		"console-fail-test": "0.5.0",
		"cspell": "8.16.0",
		"eslint": "8.57.1",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-prettier": "5.2.1",
		"eslint-plugin-react": "7.37.1",
		"eslint-plugin-react-hooks": "5.1.0",
		"eslint-plugin-storybook": "0.11.0",
		"husky": "9.1.6",
		"jsdom": "25.0.1",
		"knip": "5.40.0",
		"lint-staged": "15.2.10",
		"markdownlint": "0.37.0",
		"markdownlint-cli": "0.43.0",
		"prettier": "3.4.0",
		"prettier-plugin-curly": "0.3.1",
		"prettier-plugin-packagejson": "2.5.3",
		"prettier-plugin-sh": "0.14.0",
		"release-it": "17.10.0",
		"sentences-per-line": "0.3.0",
		"storybook": "8.4.0",
		"typescript": "5.7.2",
		"vite": "6.0.0",
		"vite-plugin-dts": "4.3.0",
		"vitest": "2.1.3"
	},
	"peerDependencies": {
		"react": "^18.2.0 || ^19.0.0",
		"react-dom": "^18.2.0 || ^19.0.0"
	},
	"engines": {
		"node": ">=18.3.0"
	},
	"publishConfig": {
		"provenance": true
	}
}
